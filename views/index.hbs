
{{#if products.length}}
	<div class='row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4'>
		{{#each products}}
			<div class='col'>
				<div class='card shadow-sm'>
					<img src='{{image}}' width="200px" />
					<div class='card-body'>
						<p class='card-text fw-bold'>{{title}}</p>
						<div class='d-flex justify-content-between align-items-center'>
							<p class='p-0 m-0'>{{formatDate createdAt}}</p>
							<small class='text-muted fs-5'>{{price}}.00$</small>
						</div>
					</div>
					<div class='card'>
						<div class='btn-group btn-group-sm' role='group' aria-label='Basic example'>
							{{#if @root.token}}
								{{#ifequal user @root.userId}}
									<form action='/delete-product/{{_id}}' method='post' class='m-0 btn btn-outline-danger'>
										<button type='submit' class='delete-btn text-dark'>Delete</button>
									</form>
								{{/ifequal}}
							{{/if}}
						</div>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
{{else}}
{{/if}}